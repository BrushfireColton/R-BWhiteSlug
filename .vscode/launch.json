  "version": "0.2.0",
  "configurations": [
    {
      "name": "(Attach) Auth Service",
      "type": "python",
      "request": "attach",
      "port": 8000,
      "debugServer": 5678,
      "host": "localhost",
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}/auth_service",
          "remoteRoot": "/app"
        }
      ]
    },
    {
      "name": "(Attach) Vendor Service",
      "type": "python",
      "request": "attach",
      "port": 8001,
      "debugServer": 5679,
      "host": "localhost",
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}/vendor_service",
          "remoteRoot": "/app"
        }
      ]
    }
  ]
}
